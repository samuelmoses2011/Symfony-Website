{% extends '@IIABMagnet/Admin/standard_layout.html.twig' %}

{% block sonata_admin_content %}

    <div class="panel panel-default">
        {{ include('@IIABMagnet/Admin/ProgramProcessing/header.html.twig') }}
    </div>

    {{ render( controller('IIABMagnetBundle:ProgramProcessing:processingStatus') ) }}

    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#program" aria-controls="program" role="tab" data-toggle="tab">Program Specific Information</a>
                    </li>
                    <li role="presentation">
                        <a href="#letter" aria-controls="letter" role="tab" data-toggle="tab">Letter Settings</a></li>
                    <li role="presentation">
                        <a href="#email" aria-controls="email" role="tab" data-toggle="tab">Email Settings</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="program">
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            {% if programForms is defined and programForms is not empty %}
                                {% for form in programForms %}
                                    {% if form is not empty %}
                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab" id="heading{{ form.vars.value.id }}">
                                                <h3 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ form.vars.value.id }}" aria-expanded="true" aria-controls="collapse{{ form.vars.value.id }}">{{ form.vars.value }}</a>
                                                </h3></div>
                                            <div id="collapse{{ form.vars.value.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ form.vars.value.id }}">
                                                <div class="panel-body">
                                                    {{ form_start( form ) }}
                                                    {% for placement in form.placementMessaging %}
                                                        <h4>{{ placement.vars.value.magnetSchool }}</h4>
                                                        <div class="row">
                                                            <div class="col-md-4 form-group">
                                                                {{ form_label(placement.interview) }}
                                                                {{ form_widget(placement.interview , {}) }}
                                                            </div>
                                                            <div class="col-md-4 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.event) }}
                                                                {{ form_widget(placement.event) }}
                                                            </div>
                                                            <div class="col-md-4 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.location) }}
                                                                {{ form_widget(placement.location) }}
                                                            </div>
                                                        </div>
                                                        <div class="row">

                                                            <div class="col-md-4 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.eventDate) }}
                                                                {{ form_widget(placement.eventDate) }}
                                                            </div>
                                                            <div class="col-md-4 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.eventTime) }}
                                                                {{ form_widget(placement.eventTime) }}
                                                            </div>
                                                            <div class="col-md-4 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.schoolPhoneNumber) }}
                                                                {{ form_widget(placement.schoolPhoneNumber) }}
                                                            </div>
                                                        </div>
                                                        <div class="row">

                                                            <div class="col-md-6 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.specialRequirement) }}
                                                                {{ form_widget(placement.specialRequirement) }}
                                                            </div>
                                                            <div class="col-md-6 form-group {% if placement.interview.vars.value == 0 %} hide{% endif %}">
                                                                {{ form_label(placement.schoolName) }}
                                                                {{ form_widget(placement.schoolName) }}
                                                            </div>
                                                        </div>
                                                        <div class="clear clearfix"></div>
                                                        <hr/>
                                                        <div class="clear clearfix"></div>
                                                    {% endfor %}
                                                    {{ form_end( form ) }}
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="letter">
                        <div class="accordion" id="accordion2">
                            <div class="accordion-group">
                                <div class="accordion-heading">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne"> Collapsible Group Item #1 </a>
                                </div>
                                <div id="collapseOne" class="accordion-body collapse in">
                                    <div class="accordion-inner">
                                        Anim pariatur cliche...
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-group">
                                <div class="accordion-heading">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo"> Collapsible Group Item #2 </a>
                                </div>
                                <div id="collapseTwo" class="accordion-body collapse">
                                    <div class="accordion-inner">
                                        Anim pariatur cliche...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="email">...</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
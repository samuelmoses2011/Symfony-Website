<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="version" content="1.10.15" />
    <!-- Chrome & Firefox OS -->
    <meta name="theme-color" content="#3C8DBC">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#3C8DBC">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#3C8DBC">
    <title>{% spaceless %}{% block title %}{{ 'welcome'|trans }}!{% endblock %}{% endspaceless %}</title>
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/foundation.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/design.1.8.6.css') }}"/>
    {% if app.request.server.get('REMOTE_ADDR') == '127.0.0.1' or app.request.server.get('REMOTE_ADDR') == '::1' %}
        <style>
            body {border: 30px solid red;}
        </style>
    {% endif %}
    <script src="{{ asset('js/vendor/modernizr.js') }}" type="text/javascript"></script>

    <link rel="shortcut icon" type="image/png" href="img/favicon.ico"/>
</head>
<body>

<header>
    <h1>{{ 'huntsville.city.schools'|trans }}</h1>

    <h3>{{ 'huntsville.city.schools.address'|trans }}</h3>
</header>
<div class="row">
    <div class="translations small-12 columns text-right">
        <ul>
            <li><a href="{{ path("magnet_index", {"_locale": "en"}) }}">English</a></li>
            <li>|</li>
            <li><a href="{{ path("magnet_index", {"_locale": "es"}) }}">Espa√±ol</a></li>
        </ul>
    </div>
</div>

<div class="row">
    {% block body %}{% endblock %}
</div>
<div id="magnetHelp" class="reveal-modal" data-reveal>
    <h2 class="text-center">{{ 'magnet.application.help'|trans }}</h2>
    {{ 'magnet.application.help.popup'|trans|raw }}
    <a class="close-reveal-modal">&#215;</a>
</div>
{% block javascripts %}{% endblock %}
<script src="{{ asset('js/vendor/jquery.js') }}"></script>
<script src="{{ asset('js/foundation.min.js') }}"></script>
<script src="{{ asset('js/mypick.js') }}"></script>
</body>
</html>
